extends ../layout

block content
  h2.display-data All Items
    a.btn.btn-primary.pull-right(href="/items/create") Create a new Item

  table.table.table-bordered.table-striped(style="width:100%")
    tr
        th Name
        th Files
        th Date
        th.last

    each item in items
      tr
        td= display(item.name)
        td= display(item.files)
        td= display(item.date)

        td
          a(href="/items/" + item._id + "/detail", title="Detail")
            i.icon-zoom-in
          | 
          a(href="/items/" + item._id + "/edit", title="Edit")
            i.icon-edit
          | 
          a(href="/items/" + item._id + "/delete", title="Delete")
            i.icon-remove